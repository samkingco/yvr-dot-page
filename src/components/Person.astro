---
interface Props {
	username: string
	name?: string
	does: string
	website: string
	bio: string
}

const { username, name, does, website, bio } = Astro.props
---

<div>
  <div class="flex gap-2 items-baseline">
    <h3 class="text-sm font-bold">
      <a href={website}>{name ?? `@${username}`}</a>
    </h3>
    <p class="text-sm leading-tight">
      &ndash; {does}
    </p>
  </div>
  <p class="text-sm leading-tight">{bio}</p>
</div>
